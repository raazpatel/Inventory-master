<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>@ViewBag.Title - REZInventory</title>

    <link href="~/Content/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/_all-skins.css" rel="stylesheet" />
    <link href="~/Content/AdminLTE.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")


    <style>
        span.logo-lg {
            display: none;
        }

        section{
            font-size:smaller;
        }

      

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .nav-tabs .dropdown-menu, .nav-pills .dropdown-menu, .navbar .dropdown-menu {
            margin-top: 0;
        }
    </style>
</head>
<body class="hold-transition skin-blue layout-top-nav">



    <div class="wrapper">
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
        <header class="main-header">
            <nav class="navbar navbar-static-top">
                <div class="container" style="width:auto;">
                    <div class="navbar-header" style="display:block;">
                        <a href="~/Home" class="navbar-brand"><b>REZ</b>Report</a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Masters <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">

                                    <li id="unit">@Html.ActionLink("Unit", "Index", "Units")</li>
                                    <li id="major">@Html.ActionLink("Major Items", "Index", "MajorItems")</li>
                                    <li id="minor">@Html.ActionLink("Minor Items", "Index", "MinorItems")</li>
                                    <li id="store">@Html.ActionLink("Store", "Index", "Store")</li>
                                    <li id="vendor">@Html.ActionLink("Vendor", "Index", "Vendor")</li>
                                   
                                </ul>

                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mapping <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li id="minor">@Html.ActionLink("Menu-Store", "Index", "MenuStoremapping")</li>
                                    <li id="minor">@Html.ActionLink("Menu-Recipe", "Index", "MenuRecipe")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Operations <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                   
                                    <li id="vendor">@Html.ActionLink("Stock Taking", "Index", "I_StockTaking")</li>
                                    <li id="vendor">@Html.ActionLink("Ordering", "Index", "OrderDetails")</li>
                                    <li id="vendor">@Html.ActionLink("Receiving", "Index", "Receiving")</li>
                                    <li id="vendor">@Html.ActionLink("Stock Transfer", "Index", "StockTransfer")</li>
                                    <li id="vendor">@Html.ActionLink("Stock Request", "Index", "StockReq")</li>
                                    <li id="vendor">@Html.ActionLink("Waste", "Index", "WasteDetails")</li>
                                    <li id="vendor">@Html.ActionLink("Stock On Hand", "Index", "StockOnHand")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Report <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li id="vendor">@Html.ActionLink("Waste By Group", "WasteReportByGroup", "WasteDetails")</li>
                                    <li id="vendor">@Html.ActionLink("Waste By Item", "WasteReportByItem", "WasteDetails")</li>
                                    <li id="vendor">@Html.ActionLink("COS by CostCenter", "COSByCostCenters", "StockOnHand")</li>
                                </ul>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "InventoryItems")">
                                    Inventory Items
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Recipe")">
                                    Recipe
                                </a>
                            </li>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Configuration <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li id="vendor">@Html.ActionLink("Master Store", "Index", "MasterStore")</li>
                                   
                                </ul>
                            </li>

                        </ul>

                    </div>
                    <!-- /.navbar-collapse -->
                    <!-- Navbar Right Menu -->
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            <!-- Messages: style can be found in dropdown.less-->
                            <!-- /.messages-menu -->
                            <!-- Notifications Menu -->
                            <!-- Tasks Menu -->
                            <!-- User Account Menu -->
                            <li class="dropdown user user-menu">
                              

                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                  

                                      
                                            <!-- The user image in the navbar-->
                                            <img src="~/Content/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                                            <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                            <span> @User.Identity.Name</span>
                                            <ul class="dropdown-menu" role="menu" style="width:0px; background:center;">

                                                <!-- The user image in the menu -->
                                                <li style="float:right; ">
                                                    <a href="@Url.Action("LogOff", "Account")">
                                                        SignOff
                                                    </a>
                                                </li>
                                                <!-- Menu Body -->

                                            </ul>


                                        
                                  
                                </a>                                <!-- Menu Toggle Button -->   
                        </ul>
                    </div>
                    <!-- /.navbar-custom-menu -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>
}
        <!-- Left side column. contains the logo and sidebar -->
        <!-- Main content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content -->
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <strong>Powered by TechRyde. </strong>All rights reserved.
            </div>
            &nbsp;
        </footer>
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                <li><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
                <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <!-- Home tab content -->
                
                <!-- /.tab-pane -->
                <!-- Stats tab content -->
                <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>
                <!-- /.tab-pane -->
                <!-- Settings tab content -->
                <div class="tab-pane" id="control-sidebar-settings-tab">
                </div>
                <!-- /.tab-pane -->
            </div>
        </aside>
        <!-- /.control-sidebar -->
      
        <!-- Add the sidebar's background. This div must be placed
        immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

   
    <script src="~/Scripts/dist/js/bootstrap-select.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
