@model InventoryPizzaExpress.Models.Store.StoreDetails
@{
    ViewBag.Title = "Edit";
}
<section class="content">
    <h2>Edit</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Admin Store</h4>
