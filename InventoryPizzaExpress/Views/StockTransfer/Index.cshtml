
@model IEnumerable<InventoryPizzaExpress.Models.Stock.StockTransferModel>
@{
    ViewBag.Title = "Index";
}

<section class="content">
    <p>
        @*@Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-default" })*@
        @Html.ActionLink("Pending Requsts", "PendingRequests", new { }, new { @class = "btn btn-default" })
    </p>
    <div class="box box-primary">

        <div class="box-body" style="overflow-x:auto;">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TransferNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SourceStore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TragetStore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Reference)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.TransferNo, "Details", new { id = item.Id })                           
                          
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.SourceStore)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TragetStore)
                        </td>
                        <td>
                            @{
                                string Date = item.Date.ToShortDateString();
                            }
                            @Html.DisplayFor(modelItem => Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reference)
                        </td>
                        <td>
                            @{
                                string Status = "";
                                if (item.Status == "1")
                                {
                                    Status = "Saved";
                                }
                                else if (item.Status == "2")
                                {
                                    Status = "Transfered";
                                }
                              
                            }
                            @Html.DisplayFor(modelItem => Status)
                            
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedOn)
                        </td>
                        @{
                            var trClass = item.Status == "1" ? "" : "hide";
                        }
                        <td class="@trClass">

                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })


                        </td>
                       
                    </tr>
                                }

            </table>
        </div>
    </div>
</section>